<?xml version="1.0" encoding="UTF-8"?>
<proxy name="SampleManagerProxy" startOnLoad="true" transports="http https" xmlns="http://ws.apache.org/ns/synapse">
    <target>
        <inSequence>
            <switch source="get-property('To')">
                <case regex=".*/sample-batches">
                    <sequence key="SampleManagerExtSEQ"/>
                </case>
                <default>
                    <sequence key="SampleManagerDsSEQ"/>
                </default>
            </switch>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence>
            <property name="HTTP_SC" scope="axis2" type="STRING" value="500"/>
            <log level="full"/>
            <respond/>
        </faultSequence>
    </target>
</proxy>
